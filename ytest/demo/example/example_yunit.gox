host "https://example.com", "http://localhost:8080"
testauth := oauth2("...")

DefaultHeader.set "User-Agent", "yaptest/0.7"

run "urlWithVar", => {
	id := "123"
	get "https://example.com/p/${id}"
	ret
	echo "code:", resp.code
	echo "body:", resp.body
}

run "matchWithVar", => {
	code := Var(int)
	id := "123"
	get "https://example.com/p/${id}"
	ret code
	echo "code:", code
	match code, 200
}

run "postWithAuth", => {
	id := "123"
	title := "title"
	author := "author"
	post "https://example.com/p/${id}"
	auth testauth
	json {
		"title":  title,
		"author": author,
	}
	ret 200 // match resp.code, 200
	echo "body:", resp.body
}

run "mathJsonObject", => {
	title := Var(string)
	author := Var(string)
	match title, "title"
	match author, "author"
	id := "123"
	get "https://example.com/p/${id}"
	ret 200
	json {
		"title":  title,
		"author": author,
	}
	echo "title:", title
	echo "author:", author
}
